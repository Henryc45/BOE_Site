  <body class="lo-body lo-body-pop">
    <%- include('../partials/nav'); %>
    <section class="lo-section-main lo-section-main-tall">
      <h3>
        <% if (info && info.length !== 0){ %> <%=info%> <% } else { %> Kickstart
        a career in a skilled trade. <% } %>
      </h3>
      <div class="lo-container lo-container-small">
        <span class="lo-error-message">
          <% if (messages.error && messages.error.length !== 0) { %>
          <span
            ><i class="fa fa-exclamation-triangle" aria-hidden="true"> </i>
          </span>
          <%=messages.error %> <% } %> <% if (info && info.length !== 0) { %>
          <span
            ><i class="fa fa-exclamation-triangle" aria-hidden="true"> </i>
          </span>
          <%=info%> <% } %>
        </span>
        <form action="/login" method="POST">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="email"
            required
          />

          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            autocomplete="current-password"
            required
          />

          <button type="submit">Login</button>
        </form>
        <aside>
          <span>Don't have an account?</span>
          <a href="/register">Sign Up</a>
        </aside>
      </div>
    </section>
    <!-- Footer Section -->
    <%- include('../partials/footer'); %>
  </body>
</html>
